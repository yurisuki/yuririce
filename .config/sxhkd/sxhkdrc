# Basic binds
super + Return
	$TERMINAL
super + KP_Enter
	$TERMINAL
super + d
	dmenu_run -nf '#77A9BB' -nb '#0B0D22' -sb '#722E77' -sf '#EE61A7'
super + r
	$TERMINAL -e $FILE
super + shift + r
	thunar
super + control + Return
	$TERMINAL -e $EDITOR
super + e
	$TERMINAL -e neomutt
super + m
	apple-music-electron
super + shift + m
	playerctl play-pause
super + n
	$TERMINAL -e newsboat
super + i
	$TERMINAL -e gotop
super + z
	$TERMINAL -e calcurse -C ~/.config/calcurse
super + shift + a
	! pgrep pulsemixer && $TERMINAL -e pulsemixer
super + shift + c
	camtoggle
super + w
	$TERMINAL -e nmtui
super + shift + w
	$BROWSER
super + shift + g
	tools

# Et cetera...
super + Scroll_Lock
	killall screenkey || screenkey
super + Insert
	transl
super + Delete
	qrcode
super + shift + Insert
	showclip
super + shift + x
	prompt "Do you want to shutdown your computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Do you want to reboot your computer?" "sudo -A reboot -h now"
super + x
	lockscreen
XF86Launch1
	xset dpms force off
XF86AudioNext
	mpc next & playerctl next
XF86AudioPlay
	mpc toggle & playerctl play-pause
XF86AudioPrev
	mpc prev & playerctl previous
XF86AudioStop
	mpc toggle & playerctl play-pause
XF86AudioRaiseVolume
	vol +
XF86AudioLowerVolume
	vol -
XF86AudioMute
	vol t
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15
# Recording
# Take screenshot
Print
	maimpuush
# Pick screenshot type
shift + Print
	maimpick
# Record audio or video
super + Print
	dmenurecord
# kill active recording
super + Delete
	dmenurecord kill
# toggle compositor
shift+Scroll_Lock
	compositor toggle

# Function keys
# Show readme
super + F1
	notify-send -i ~/.scripts/yuririce.png "The documentation doesn't exist. (yet)"
# F2 is restart in i3 right now.
# Change display
super + F3
	displayselect
# Hibernate
super + F4
	prompt 'Do you want to hibernate computer?' 'sudo systemctl suspend'
# Restart/rescan wifi/eth networks
super + F5
# Toggle VPN
super + shift + F5
	vpntog
# Start torrent daemon/open interface
super + F6
	torwrap
# toggle torrent daemon
super + F7
	td-toggle
# sync email
super + F8
	mailsync
# Mount a USB drive or Android device
super + F9
	dmenumount
# Unmount a USB drive or Android device
super + F10
	dmenuumount
# Search with Duckduckgo
super + F11
	googlesearch
# Search with osu!
super + F12
	ifinstalled osusearch && osusearch
