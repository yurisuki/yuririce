# bspwm binds
# Escape from bspwm
super + shift + Escape
	prompt "Do you want to exit?" "bspc quit"
# Quit or kill program
super + {_,shift + }q
    bspc node -{c,k}
# Toggle fullscreen
super + f
	bspc node -t \~fullscreen
# Toggle floating window
super + shift + space
	bspc node -t \~floating
# Move to/move window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}
# Preselection
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}
# Move to/go to different desktop
super + {_,shift + }{plus, ecaron, scaron, ccaron, rcaron, zcaron, yacute, aacute, iacute, eacute}
	bspc {desktop -f,node -d} '^{1-9,10}'
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
# Resize window
super + alt + {h,j,k,l}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)
super + alt + {Left,Down,Up,Right}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)
# Get to the last desktop/last window
super + {_,shift + }{Tab}
	bspc {desktop,node} -f last
# Make window the biggest one
super + g
	bspc node -s biggest.local
# Make window sticky
super + shift + c
	bspc node -g sticky
# Abort preseletion
super + Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
super + t
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
# Rotate layout
super + shift + y
	bspc node @focused:/ -R 90
# Toggle gaps
super + shift + d
	bspc config -d focused window_gap {0,15}
# Make window floating
super + shift + n
	bspc node focused -t \~floating ; hover right
super + shift + b
	bspc node focused -t \~floating ; hover left
# Toggle polybar
super + b
	pgrep polybar && killall polybar && bspc config top_padding 24 || polybar default & bspc config top_padding 0
# Move a floating window
super + shift + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + shift + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Basic binds
super + Return
	$TERMINAL
super + KP_Enter
	$TERMINAL
super + d
	dmenu_run -nf '#77A9BB' -nb '#0B0D22' -sb '#722E77' -sf '#EE61A7'
super + r
	$TERMINAL -e $FILE
super + shift + r
	$TERMINAL -e sudo $FILE -r ${HOME}/.config/ranger
super + control + r
	$GUIFILE
super + control + Return
	$TERMINAL -e $EDITOR
super + e
	$TERMINAL -e neomutt
super + u
	ddkitty
super + a
	ddcalc
super + shift + a
	ddmixer
super + m
	ifinstalled cider && cider
super + shift + m
	playerctl play-pause
super + n
	$TERMINAL -e newsboat
super + i
	$TERMINAL -e gotop
super + z
	$TERMINAL -e calcurse -C ~/.config/calcurse
super + w
	$TERMINAL -e sudo nmtui
super + shift + w
	$BROWSER
super + shift + g
	tools
super + c
	cabl
super + p
	texcompile --last

# Et cetera...
super + Scroll_Lock
	killall screenkey || screenkey
super + Insert
	transl
super + Delete
	qrcode
super + shift + Insert
	showclip
super + shift + x
	prompt "Do you want to shutdown your computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Do you want to reboot your computer?" "sudo -A reboot -h now"
super + x
	lockscreen
XF86Launch1
	xset dpms force off
XF86AudioNext
	mpc next & playerctl next
XF86AudioPlay
	mpc toggle & playerctl play-pause
XF86AudioPrev
	mpc prev & playerctl previous
XF86AudioStop
	mpc toggle & playerctl play-pause
XF86AudioRaiseVolume
	vol +
XF86AudioLowerVolume
	vol -
XF86AudioMute
	vol t
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15
# Recording
# Take screenshot
Print
	maim "$HOME/$(date +'%m%d%Y-%r').png"
# Pick screenshot type
shift + Print
	maimpick
# Record audio or video
super + Print
	dmenurecord
# kill active recording
super + Delete
	dmenurecord kill

# Function keys
# Show readme
super + F1
	notify-send -i ~/.scripts/yuririce.png "The documentation doesn't exist. (yet)"
# Restart bspwm
super + F2
	bspwmrestart
# Change display
super + F3
	displayselect
# Hibernate
super + F4
	prompt 'Do you want to hibernate computer?' 'sudo systemctl suspend'
# Restart/rescan wifi/eth networks
super + F5
# Start torrent daemon/open interface
super + F6
	torwrap
# toggle torrent daemon
super + F7
	td-toggle
# sync email
super + F8
	mailsync
# Mount a USB drive or Android device
super + F9
	dmenumount
# Unmount a USB drive or Android device
super + F10
	dmenuumount
# Search with Google
super + F11
	googlesearch
# Search with IDOS
super + F12
	idossearch
