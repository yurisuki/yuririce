# bspwm binds
super + shift + Escape
	prompt "Do you want to exit?" "bspc quit"
super + F2
	bspwmrestart
super + {_,shift + }q
    bspc node -{c,k}
super + f
	bspc node -t \~fullscreen
super + shift + space
	bspc node -t \~floating
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + {_,shift + }{Tab}
	bspc {desktop,node} -f last
super + g
	bspc node -s biggest.window
super + shift + c
	bspc node -g sticky
super + Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
super + shift + y
	bspc node @focused:/ -R 90
super + shift + d
	bspc config window_gap {0,15}
super + shift + n
	bspc node focused -t \~floating ; hover right
super + shift + b
	bspc node focused -t \~floating ; hover left
super + t
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
super + b
	pgrep polybar && killall polybar && bspc config top_padding 24 || polybar default & bspc config top_padding 0
super + shift + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + shift + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Basic binds
super + Return
	$TERMINAL
super + KP_Enter
	$TERMINAL
super + d
	dmenu_run -nf '#77A9BB' -nb '#0B0D22' -sb '#722E77' -sf '#EE61A7'
super + r
	$TERMINAL -e $FILE
super + shift + r
	$TERMINAL -e sudo $FILE -r ${HOME}/.config/ranger
super + control + r
	$GUIFILE
super + control + Return
	$TERMINAL -e $EDITOR
super + e
	$TERMINAL -e neomutt
super + u
	ddkitty
super + a
	ddcalc
super + shift + a
	ddmixer
super + m
	ifinstalled cider && cider
super + shift + m
	playerctl play-pause
super + n
	$TERMINAL -e newsboat
super + i
	$TERMINAL -e gotop
super + z
	$TERMINAL -e calcurse -C ~/.config/calcurse
super + w
	$TERMINAL -e nmtui
super + shift + w
	$BROWSER
super + shift + g
	tools

# Et cetera...
super + Scroll_Lock
	killall screenkey || screenkey
super + Insert
	transl
super + Delete
	qrcode
super + shift + Insert
	showclip
super + shift + x
	prompt "Do you want to shutdown your computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Do you want to reboot your computer?" "sudo -A reboot -h now"
super + x
	lockscreen
XF86Launch1
	xset dpms force off
XF86AudioNext
	mpc next & playerctl next
XF86AudioPlay
	mpc toggle & playerctl play-pause
XF86AudioPrev
	mpc prev & playerctl previous
XF86AudioStop
	mpc toggle & playerctl play-pause
XF86AudioRaiseVolume
	vol +
XF86AudioLowerVolume
	vol -
XF86AudioMute
	vol t
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15
# Recording
# Take screenshot
Print
	maim "$HOME/$(date +'%m%d%Y-%r').png"
# Pick screenshot type
shift + Print
	maimpick
# Record audio or video
super + Print
	dmenurecord
# kill active recording
super + Delete
	dmenurecord kill
# toggle compositor
shift+Scroll_Lock
	compositor toggle

# Function keys
# Show readme
super + F1
	notify-send -i ~/.scripts/yuririce.png "The documentation doesn't exist. (yet)"
# F2 is restart in i3 right now.
# Change display
super + F3
	displayselect
# Hibernate
super + F4
	prompt 'Do you want to hibernate computer?' 'sudo systemctl suspend'
# Restart/rescan wifi/eth networks
super + F5
# Toggle VPN
super + shift + F5
	vpntog
# Start torrent daemon/open interface
super + F6
	torwrap
# toggle torrent daemon
super + F7
	td-toggle
# sync email
super + F8
	mailsync
# Mount a USB drive or Android device
super + F9
	dmenumount
# Unmount a USB drive or Android device
super + F10
	dmenuumount
# Search with Google
super + F11
	googlesearch
# Search with IDOS
super + F12
	idossearch
